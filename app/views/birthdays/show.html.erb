

<h2>Name: <%= @birthday.giftee_name %></h2>
<h2>Birthday: <%= @birthday.dob.strftime("%d-%m-%Y") %></h2>

<img src="<%= @birthday.image_url %> " width="250" height="300">

<h2><%= @birthday.email %></h2>

<h2><%= @birthday.message %></h2>


<h3>Current Reminder:</h3>
<%if @birthday.reminder.nil? %>
    <%= button_to "Add Reminder", new_reminder_path, method: :get, class: "mt-2 btn btn-primary" %>
<%else%>
    <%=@birthday.reminder.frequency%><br>
    add method to delete reminder
<%end%>

<div id= "box">
      <%= button_to "Add Gifts", new_gift_path(@user), method: :get, class: "mt-2 btn btn-primary" %>
</div>