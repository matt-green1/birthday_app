<center>
<div class="row">
  <div class="col-md-6 offset-3">

  <h1> Create a Custom Reminder </h1><br>

      <% if flash[:list_errors] %>
        <div id="error_explanation">
           <div class="alert alert-danger">  
         <% flash[:list_errors].each do |error| %>
          <p><%= error %></p>
        <% end %>
         </div>
      </div>
      <% end %>
      

    <%= form_with(model: @reminder, local: true) do |f| %> 
      <%= f.label :message %>
      <%= f.text_area :message, class: 'mb-1 form-control' %>  
      <%= f.collection_select :birthday_id, @birthdays, :id, :giftee_name, class: 'mb-1 form-control' %>     
      <%= f.submit "Create", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>

  </div>
  </center>