<% if flash[:list_errors] %>
  <% flash[:list_errors].each do |error| %>
  <p><%= error %></p>
<% end %>
<% end %>

<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_with(model: @gift_birthday, local: true) do |f| %>
      <%= f.label :birthday_id %>
      <%= f.collection_select :birthday_id, @birthdays, :id, :giftee_name, class: 'mb-1 form-control' %>
      <%= f.label :gift_id %>
      <%= f.collection_select :gift_id, @gifts, :id, :giftidea, class: 'mb-1 form-control' %>
      <%= f.submit "Create", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>

